{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "dist",
		"strict": true,
		"strictNullChecks": true,
		"jsx": "react",
		"jsxFactory": "h",
		"module": "CommonJS",
		"baseUrl": ".",
		"paths": {
			"App": ["./src/App"],
			"App/*": ["./src/App/*"],
			"Components": ["./src/Components"],
			"Components/*": ["./src/Components/*"],
			"Util": ["./src/Util"],
			"Util/*": ["./src/Util/*"]
		},
		"sourceMap": true,
		"target": "ES5",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"noEmitOnError": false,
		"importsNotUsedAsValues": "preserve",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "node_modules.nosync", "dist", "public"]
}
